<Window x:Class="GalleryViewer.Views.GalleryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Screenshot Gallery" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Styles -->
        <Style x:Key="ScreenshotTileStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#40000000" BlurRadius="6" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#4A90E2"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#4A90E2" BlurRadius="8" ShadowDepth="2" Opacity="0.5"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding HasAiAnalysis}" Value="True">
                    <Setter Property="Background" Value="#4CAF50"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsAnalyzing}" Value="True">
                    <Setter Property="Background" Value="#FF9800"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding AnalysisError, Converter={x:Static local:Converters.IsNotNullConverter}}" Value="True">
                    <Setter Property="Background" Value="#F44336"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title and Actions -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Screenshot Gallery" FontSize="18" FontWeight="SemiBold" Margin="0,0,16,0"/>
                    <Button Command="{Binding RefreshCommand}" 
                            Content="🔄 Refresh" 
                            Padding="12,6" 
                            Margin="0,0,8,0"
                            IsEnabled="{Binding IsRefreshing, Converter={x:Static local:Converters.InvertBooleanConverter}}"/>
                    <Button Command="{Binding LoadCommand}" 
                            Content="📁 Load" 
                            Padding="12,6"
                            IsEnabled="{Binding IsLoading, Converter={x:Static local:Converters.InvertBooleanConverter}}"/>
                </StackPanel>

                <!-- Search -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                             Width="300" 
                             Padding="8,6"
                             FontSize="14"
                             Margin="16,0"/>
                    <Button Command="{Binding ClearSearchCommand}" 
                            Content="✕" 
                            Width="30" 
                            Margin="4,0,0,0"
                            ToolTip="Clear search"/>
                </StackPanel>

                <!-- Statistics -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding TotalScreenshots, StringFormat='Total: {0}'}" 
                               Margin="0,0,12,0" 
                               FontWeight="Medium"/>
                    <TextBlock Text="{Binding AnalyzedScreenshots, StringFormat='Analyzed: {0}'}" 
                               Margin="0,0,12,0"
                               Foreground="#4CAF50"
                               FontWeight="Medium"/>
                    <TextBlock Text="{Binding PendingAnalysis, StringFormat='Pending: {0}'}" 
                               Foreground="#FF9800"
                               FontWeight="Medium"
                               Visibility="{Binding PendingAnalysis, Converter={x:Static local:Converters.GreaterThanZeroToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading/Status Indicator -->
        <Border Grid.Row="1" Background="#E3F2FD" Padding="16,8" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="100" Height="4" Margin="0,0,12,0"/>
                <TextBlock Text="{Binding StatusMessage}" FontWeight="Medium" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Screenshot Grid -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding FilteredScreenshots}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource ScreenshotTileStyle}" 
                                Width="280" 
                                Height="320"
                                MouseLeftButtonDown="ScreenshotTile_MouseLeftButtonDown">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="200"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Screenshot Thumbnail -->
                                <Border Grid.Row="0" 
                                        Background="#F0F0F0" 
                                        CornerRadius="4"
                                        ClipToBounds="True">
                                    <Image Source="{Binding ThumbnailPath}" 
                                           Stretch="Uniform"
                                           StretchDirection="DownOnly"/>
                                </Border>

                                <!-- Screenshot Info -->
                                <Grid Grid.Row="1" Margin="0,12,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Name and Status -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding DisplayName}" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="14"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTip="{Binding DisplayName}"/>
                                        
                                        <Border Grid.Column="1" Style="{StaticResource StatusBadgeStyle}">
                                            <TextBlock Text="{Binding StatusDisplayText}" 
                                                       Foreground="White" 
                                                       FontSize="10" 
                                                       FontWeight="SemiBold"/>
                                        </Border>
                                    </Grid>

                                    <!-- Date and Size -->
                                    <TextBlock Grid.Row="1" 
                                               Text="{Binding FormattedCreatedAt}" 
                                               FontSize="12" 
                                               Foreground="#666"
                                               Margin="0,4,0,0"/>

                                    <!-- File Size -->
                                    <TextBlock Grid.Row="2" 
                                               Text="{Binding FormattedFileSize}" 
                                               FontSize="11" 
                                               Foreground="#888"
                                               Margin="0,2,0,0"/>

                                    <!-- AI Description -->
                                    <TextBlock Grid.Row="3" 
                                               Text="{Binding AiDescription}" 
                                               FontSize="12" 
                                               Foreground="#333"
                                               TextWrapping="Wrap"
                                               TextTrimming="CharacterEllipsis"
                                               MaxHeight="40"
                                               Margin="0,8,0,0"
                                               Visibility="{Binding HasAiAnalysis, Converter={StaticResource BoolToVisibilityConverter}}"
                                               ToolTip="{Binding AiDescription}"/>

                                    <!-- Loading Analysis -->
                                    <StackPanel Grid.Row="3" 
                                                Orientation="Horizontal" 
                                                Margin="0,8,0,0"
                                                Visibility="{Binding IsAnalyzing, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <ProgressBar IsIndeterminate="True" Width="60" Height="3" Margin="0,0,8,0"/>
                                        <TextBlock Text="Analyzing..." FontSize="11" Foreground="#666" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Analysis Error -->
                                    <TextBlock Grid.Row="3" 
                                               Text="{Binding AnalysisError}" 
                                               FontSize="11" 
                                               Foreground="#F44336"
                                               TextWrapping="Wrap"
                                               Margin="0,8,0,0"
                                               Visibility="{Binding AnalysisError, Converter={x:Static local:Converters.StringToVisibilityConverter}}"
                                               ToolTip="{Binding AnalysisError}"/>

                                    <!-- Actions -->
                                    <StackPanel Grid.Row="4" 
                                                Orientation="Horizontal" 
                                                HorizontalAlignment="Right" 
                                                Margin="0,8,0,0">
                                        <Button Command="{Binding OpenImageCommand}" 
                                                Content="👁️" 
                                                Width="24" 
                                                Height="24" 
                                                Margin="0,0,4,0"
                                                ToolTip="Open image"
                                                FontSize="12"/>
                                        <Button Command="{Binding OpenInExplorerCommand}" 
                                                Content="📁" 
                                                Width="24" 
                                                Height="24" 
                                                Margin="0,0,4,0"
                                                ToolTip="Show in explorer"
                                                FontSize="12"/>
                                        <Button Command="{Binding DeleteCommand}" 
                                                Content="🗑️" 
                                                Width="24" 
                                                Height="24"
                                                ToolTip="Delete screenshot"
                                                FontSize="12"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#F5F5F5" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="{Binding StatusMessage}" 
                           VerticalAlignment="Center"/>
                           
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <TextBlock Text="Press Ctrl+Print Screen to capture screenshots" 
                               FontStyle="Italic" 
                               Foreground="#666"
                               Margin="0,0,16,0"/>
                    <Button Content="Help" 
                            Padding="8,4"
                            FontSize="11"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>