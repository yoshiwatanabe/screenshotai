{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Vision.Services": "Debug"
    }
  },
  "FolderMonitorOptions": {
    "Path": "_watch"
  },
  "Storage": {
    "ScreenshotsDirectory": "_output",
    "ThumbnailsDirectory": "_output/thumbnails",
    "CreateDirectoriesIfNotExist": true,
    "MaxFileSizeBytes": 52428800,
    "AzureVision": {
      "Enabled": true,
      "Simulate": false,
      "Endpoint": "",
      "ApiKey": "",
      "Language": "en",
      "TimeoutSeconds": 30,
      "MinConfidenceThreshold": 0.5
    }
  },
  "Viewer": {
    "Port": 8080,
    "Host": "0.0.0.0",
    "EnableCors": true,
    "StaticFilesPath": "wwwroot",
    "OutputDirectory": "_output"
  }
}
