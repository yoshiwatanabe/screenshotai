{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "ScreenshotManagerApp": "Debug",
      "ScreenshotCapture": "Information",
      "AzureVisionAnalysis": "Information",
      "GalleryViewer": "Information",
      "Storage": "Information"
    }
  },
  "App": {
    "StartMinimized": true,
    "ShowToastNotifications": true,
    "AutoStartWithWindows": false,
    "HotkeyEnabled": true,
    "HotkeyDisplayText": "Ctrl+Print Screen",
    "GalleryAutoRefresh": true,
    "NotificationTimeoutSeconds": 5,
    "ShowDebugInfo": false,
    "MaxCachedScreenshots": 100,
    "AutoAnalyzeScreenshots": true,
    "Version": "1.0.0",
    "ApplicationName": "Screenshot Manager"
  },
  "Storage": {
    "ScreenshotsDirectory": "~/Documents/Screenshots",
    "ThumbnailsDirectory": "~/Documents/Screenshots/Thumbnails",
    "CreateDirectoriesIfNotExist": true,
    "MaxFileSizeBytes": 52428800,
    "DefaultOptimization": {
      "MaxWidth": 1920,
      "MaxHeight": 1080,
      "JpegQuality": 85,
      "GenerateThumbnail": true,
      "ThumbnailSize": {
        "Width": 300,
        "Height": 200
      }
    }
  },
  "AzureVision": {
    "Endpoint": "https://your-ai-foundry-endpoint.cognitiveservices.azure.com/",
    "ApiKey": "your-api-key-stored-in-user-secrets",
    "ModelDeploymentName": null,
    "ApiVersion": "2024-02-01",
    "TimeoutSeconds": 30,
    "MaxRetryAttempts": 3,
    "RetryDelayMs": 1000,
    "MaxFileSizeBytes": 20971520,
    "IncludeDenseCaptions": true,
    "IncludeObjects": true,
    "IncludeText": true,
    "IncludeTags": true
  }
}